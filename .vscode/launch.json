    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Install",
            "runtimeVersion": "20", // If i need to run node 4.8.7
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "install"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch http server",
            "runtimeArgs": [
                "${workspaceFolder}/node_modules/http-server/bin/http-server",
                "--silent",
                "-p",
                "7272"
            ],
            "trace": false,
            "enableContentValidation": false,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}